page {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
#detailWordsView{

  height:80rpx;
  width:100%;
  background-color: white;
  padding-left: 25rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
}
#detailTxt{
  font-size: small;
  color:#696969;
}
.adContainer{
  width:700rpx;
  margin-left: 25rpx;
  border-style: solid;
  border-width: 2rpx;
  border-color: #d2b576;
}
#topView{
  height:100rpx;
  width:100%;
  display: flex;  
  justify-content: flex-start;
  background-color: white;
}
#leftTopView{
   height:100rpx;
   width:50%;
   display: flex;
   justify-content: space-between;
   align-items: center;
   flex-direction: row;
}
#rightTopView{
   height:100rpx;
   width:50%;
   display: flex;
   justify-content: space-between;
   align-items: center;
   flex-direction: row;
}
#leftTxt{
  margin-left: 25rpx;
  color: #0079FF;
}
.GoodsTxt{
  background-color: #051041;
  color: #d2b576;
  padding-right: 20rpx;
  padding-left: 20rpx;
  border-radius: 6rpx;
  margin-right: 25rpx;
}
#rightTxt{
  margin-left: 25rpx;
  color: #D50000;
}
#infoView{
  height: 80rpx;
  width:100%;
  margin-top: 20rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;

}
#infoTxt{
  color: #696969;
  margin-left: 25rpx;
  font-size: small;
}
#bottomView{
  width:100%;
  margin-top: 20rpx;
}
#img0{
  width:680rpx;
  border-radius: 30rpx;
  border-width:10rpx;
  border-color: #0079FF;
  border-style: solid;
  margin-left: 25rpx;
}
#img1{
  width:680rpx;
  border-radius: 30rpx;
  border-width:10rpx;
  border-color: #D50000;
  border-style: solid;
  margin-left: 25rpx;
}
#heartView{

  height:120rpx;
  width:100%;
  background-color: white;
  display: flex;
  justify-content: center;
}
#leftHeartView{
  height:120rpx;
  width:500rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  /*垂直水平居中*/
}
#rightHeartView{
  height:120rpx;
  width:250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /*垂直水平居中*/
  padding-right: 25rpx;
}
