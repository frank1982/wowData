page {
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

#topView{
  height:100rpx;
  width:100%;
  display: flex;  
  justify-content: flex-start;
  background-color: white;
}
#leftTopView{
   height:100rpx;
   width:50%;
   display: flex;
   justify-content: space-between;
   align-items: center;
   flex-direction: row;
}
#rightTopView{
   height:100rpx;
   width:50%;
   display: flex;
   justify-content: space-between;
   align-items: center;
   flex-direction: row;
}
